import os
from web3 import Web3
from web3.gas_strategies.time_based import fast_gas_price_strategy

# Env vars (add to Render: ETH_RPC_URL, PRIVATE_KEY, FLASH_ARB_CONTRACT_ADDRESS if custom)
w3 = Web3(Web3.HTTPProvider(os.getenv("ETH_RPC_URL", "https://mainnet.infura.io/v3/YOUR_INFURA_KEY")))
w3.eth.set_gas_price_strategy(fast_gas_price_strategy)

account = w3.eth.account.from_key(os.getenv("PRIVATE_KEY")) if os.getenv("PRIVATE_KEY") else None

# Aave V3 Pool (Ethereum mainnet) â€“ flashLoanSimple
AAVE_POOL = "0x87870Bca3F3fD6335C3F4ce8392D69350B4fA4E2"

# Uniswap V3 Router
UNISWAP_ROUTER = "0xE592427A0AEce92De3Edee1F18E0157C058ce141"

# Example tokens (USDC for stable arb)
USDC = "0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48"
WETH = "0xC02aaA39b223FE8D0A0e5C4F27eAD9083C756Cc2"

# Minimal ABI snippets
POOL_ABI = '[ {"inputs":[{"internalType":"address","name":"receiverAddress","type":"address"},{"internalType":"address","name":"asset","type":"address"},{"internalType":"uint256","name":"amount","type":"uint256"},{"internalType":"bytes","name":"params","type":"bytes"},{"internalType":"uint16","name":"referralCode","type":"uint16"}],"name":"flashLoanSimple","outputs":[],"stateMutability":"nonpayable","type":"function"} ]'

ERC20_ABI = '[ {"inputs":[{"internalType":"uint256","name":"amount","type":"uint256"}],"name":"approve","outputs":[{"internalType":"bool","name":"","type":"bool"}],"stateMutability":"nonpayable","type":"function"} ]'

async def detect_cex_dex_spread(symbol: str = "ETH/USDT") -> dict:
    # Use existing ccxt binance price
    from main import exchanges  # Cross-import ok for module
    binance_price = (await exchanges['binance'].fetch_ticker(symbol))['last']
    
    # On-chain Uniswap price query (simple V3 pool fetch example)
    # Expand with quoter contract for exact
    return {"binance": binance_price, "uniswap": binance_price * 1.005, "spread": 0.5}  # Placeholder

async def execute_flash_arb(amount: int = 1_000_000 * 10**6):  # 1M USDC example
    if not account:
        await _maybe_await(send_alert, "âš ï¸ Flash arb skipped: no PRIVATE_KEY")
        return
    
    try:
        pool = w3.eth.contract(address=AAVE_POOL, abi=POOL_ABI)
        
        # Encode params: e.g., buy low on Uniswap path
        params = w3.to_bytes(hexstr="0x")  # Custom calldata for your receiver logic
        
        tx = pool.functions.flashLoanSimple(
            account.address,      # Receiver (your wallet or contract)
            USDC,
            amount,
            params,
            0
        ).build_transaction({
            'from': account.address,
            'gas': 5_000_000,
            'maxFeePerGas': w3.to_wei('50', 'gwei'),
            'maxPriorityFeePerGas': w3.to_wei('2', 'gwei'),
            'nonce': w3.eth.get_transaction_count(account.address),
        })
        
        signed = account.sign_transaction(tx)
        tx_hash = w3.eth.send_raw_transaction(signed.rawTransaction)
        
        await _maybe_await(send_alert, f"ðŸš€ Flash loan executed: {tx_hash.hex()} â€“ empire strikes atomic")
        _log(f"Flash arb tx: {tx_hash.hex()}")
    except Exception as e:
        await _maybe_await(send_alert, f"âŒ Flash arb failed: {e}")
        _log(f"Flash error: {e}")
import React, { useState } from 'react';
import { base44 } from "@/api/base44Client";
import { useQuery } from "@tanstack/react-query";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Zap, TrendingUp, AlertCircle, DollarSign, Activity, Clock } from "lucide-react";

export default function Arbitrage() {
  const [selectedOpp, setSelectedOpp] = useState(null);
  
  const { data: opportunities, isLoading } = useQuery({
    queryKey: ['arbitrage'],
    queryFn: () => base44.entities.ArbitrageOpportunity.filter({ status: 'active' }, '-spread_percent', 50),
    initialData: [],
    refetchInterval: 5000, // Refresh every 5 seconds
  });

  const totalPotentialProfit = opportunities.reduce((sum, opp) => sum + (opp.potential_profit || 0), 0);
  const highestSpread = opportunities.length > 0 ? Math.max(...opportunities.map(o => o.spread_percent || 0)) : 0;

  return (
    <div className="min-h-screen bg-black relative overflow-hidden">
      {/* Animated Background Grid */}
      <div className="absolute inset-0 bg-[linear-gradient(rgba(234,179,8,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(234,179,8,0.03)_1px,transparent_1px)] bg-[size:50px_50px] [mask-image:radial-gradient(ellipse_80%_50%_at_50%_0%,black,transparent)]" />
      
      {/* Glow Effects */}
      <div className="absolute top-0 left-1/4 w-96 h-96 bg-yellow-500/10 rounded-full blur-[120px] animate-pulse" />
      <div className="absolute bottom-0 right-1/4 w-96 h-96 bg-emerald-500/10 rounded-full blur-[120px] animate-pulse" style={{ animationDelay: '1s' }} />

      <div className="relative z-10 container mx-auto px-4 py-8 max-w-7xl">
        {/* Header Section */}
        <div className="mb-12">
          <div className="flex items-center gap-4 mb-4">
            <div className="relative">
              <Zap className="w-12 h-12 text-yellow-400 animate-pulse" />
              <div className="absolute inset-0 w-12 h-12 bg-yellow-400/20 rounded-full blur-xl animate-pulse" />
            </div>
            <div>
              <h1 className="text-5xl font-black text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 via-yellow-200 to-yellow-400 tracking-tight">
                Flash Arbitrage
              </h1>
              <p className="text-slate-500 text-lg font-light tracking-wide mt-1">
                Lightning-fast DeFi profit opportunities
              </p>
            </div>
          </div>

          {/* Stats Bar */}
          <div className="grid grid-cols-1 md:grid-cols-3 gap-4 mt-8">
            <div className="bg-gradient-to-br from-slate-900/90 to-slate-800/90 backdrop-blur-xl border border-yellow-500/20 rounded-2xl p-6 relative overflow-hidden group hover:border-yellow-500/40 transition-all">
              <div className="absolute inset-0 bg-gradient-to-br from-yellow-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity" />
              <div className="relative flex items-center justify-between">
                <div>
                  <p className="text-slate-400 text-sm font-medium tracking-wide mb-2">Active Opportunities</p>
                  <p className="text-white text-4xl font-black tabular-nums">{opportunities.length}</p>
                </div>
                <Activity className="w-10 h-10 text-yellow-400/40" />
              </div>
            </div>

            <div className="bg-gradient-to-br from-slate-900/90 to-slate-800/90 backdrop-blur-xl border border-emerald-500/20 rounded-2xl p-6 relative overflow-hidden group hover:border-emerald-500/40 transition-all">
              <div className="absolute inset-0 bg-gradient-to-br from-emerald-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity" />
              <div className="relative flex items-center justify-between">
                <div>
                  <p className="text-slate-400 text-sm font-medium tracking-wide mb-2">Total Potential</p>
                  <p className="text-emerald-400 text-4xl font-black tabular-nums">${totalPotentialProfit.toFixed(2)}</p>
                </div>
                <DollarSign className="w-10 h-10 text-emerald-400/40" />
              </div>
            </div>

            <div className="bg-gradient-to-br from-slate-900/90 to-slate-800/90 backdrop-blur-xl border border-orange-500/20 rounded-2xl p-6 relative overflow-hidden group hover:border-orange-500/40 transition-all">
              <div className="absolute inset-0 bg-gradient-to-br from-orange-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity" />
              <div className="relative flex items-center justify-between">
                <div>
                  <p className="text-slate-400 text-sm font-medium tracking-wide mb-2">Highest Spread</p>
                  <p className="text-orange-400 text-4xl font-black tabular-nums">{highestSpread.toFixed(2)}%</p>
                </div>
                <TrendingUp className="w-10 h-10 text-orange-400/40" />
              </div>
            </div>
          </div>
        </div>

        {/* Main Content */}
        {isLoading ? (
          <div className="flex flex-col items-center justify-center py-20">
            <div className="relative">
              <div className="w-16 h-16 border-4 border-slate-800 border-t-yellow-400 rounded-full animate-spin" />
              <div className="absolute inset-0 w-16 h-16 border-4 border-transparent border-t-yellow-400/20 rounded-full animate-spin" style={{ animationDirection: 'reverse', animationDuration: '1.5s' }} />
            </div>
            <p className="text-slate-500 mt-6 text-lg font-light tracking-wide">Scanning markets...</p>
          </div>
        ) : opportunities.length === 0 ? (
          <div className="bg-gradient-to-br from-slate-900/50 to-slate-800/50 backdrop-blur-xl border border-slate-700/50 rounded-3xl p-16 text-center">
            <div className="inline-flex items-center justify-center w-20 h-20 rounded-full bg-slate-800/50 mb-6">
              <AlertCircle className="w-10 h-10 text-slate-600" />
            </div>
            <p className="text-slate-400 text-xl font-light tracking-wide mb-2">No opportunities detected</p>
            <p className="text-slate-600 text-sm">The oracle is watching. Opportunities will appear here.</p>
          </div>
        ) : (
          <div className="grid lg:grid-cols-2 xl:grid-cols-3 gap-6">
            {opportunities.map((opp, idx) => {
              const profitMargin = ((opp.potential_profit || 0) / (opp.price_a || 1)) * 100;
              const isHighProfit = profitMargin > 5;
              
              return (
                <div
                  key={opp.id}
                  className="group relative"
                  style={{ animationDelay: `${idx * 50}ms` }}
                  onMouseEnter={() => setSelectedOpp(opp.id)}
                  onMouseLeave={() => setSelectedOpp(null)}
                >
                  {/* Glow effect on hover */}
                  <div className={`absolute inset-0 bg-gradient-to-br ${isHighProfit ? 'from-emerald-500/20 to-yellow-500/20' : 'from-yellow-500/10 to-orange-500/10'} rounded-3xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500`} />
                  
                  <Card className={`relative bg-gradient-to-br from-slate-900/90 to-slate-800/90 backdrop-blur-xl border ${isHighProfit ? 'border-emerald-500/30' : 'border-yellow-500/20'} rounded-3xl overflow-hidden transition-all duration-300 group-hover:border-yellow-500/50 group-hover:scale-[1.02]`}>
                    {/* Top accent line */}
                    <div className={`absolute top-0 left-0 right-0 h-1 bg-gradient-to-r ${isHighProfit ? 'from-emerald-500 via-yellow-400 to-emerald-500' : 'from-yellow-500 via-orange-400 to-yellow-500'}`} />
                    
                    <CardHeader className="pb-4">
                      <div className="flex items-start justify-between">
                        <div>
                          <CardTitle className="text-white text-2xl font-black mb-2">{opp.symbol}</CardTitle>
                          <div className="flex items-center gap-2">
                            <Clock className="w-3 h-3 text-slate-500" />
                            <span className="text-slate-500 text-xs font-medium tracking-wide">LIVE</span>
                          </div>
                        </div>
                        <Badge className={`${isHighProfit ? 'bg-emerald-500/20 text-emerald-400 border-emerald-500/40' : 'bg-yellow-500/20 text-yellow-400 border-yellow-500/40'} font-black text-base px-4 py-2 rounded-full border-2 shadow-lg`}>
                          {opp.spread_percent?.toFixed(2)}%
                        </Badge>
                      </div>
                    </CardHeader>

                    <CardContent>
                      <div className="space-y-4">
                        {/* Exchange A - Buy Side */}
                        <div className="relative p-4 bg-gradient-to-br from-slate-800/60 to-slate-700/40 border border-slate-600/30 rounded-2xl overflow-hidden group/exchange">
                          <div className="absolute top-0 right-0 w-20 h-20 bg-blue-500/10 rounded-full blur-2xl" />
                          <div className="relative">
                            <div className="flex items-center gap-2 mb-3">
                              <div className="w-2 h-2 rounded-full bg-blue-400 animate-pulse" />
                              <p className="text-blue-400 text-xs font-bold tracking-wider uppercase">{opp.exchange_a}</p>
                            </div>
                            <div className="flex items-baseline gap-2">
                              <p className="text-white text-3xl font-black tabular-nums">${opp.price_a?.toFixed(2)}</p>
                              <span className="text-slate-500 text-sm font-medium">BUY</span>
                            </div>
                          </div>
                        </div>

                        {/* Arrow Indicator */}
                        <div className="flex justify-center relative">
                          <div className="flex flex-col items-center gap-1">
                            <div className="h-8 w-0.5 bg-gradient-to-b from-transparent via-yellow-400 to-transparent" />
                            <div className="w-10 h-10 rounded-full bg-gradient-to-br from-yellow-500 to-orange-500 flex items-center justify-center shadow-lg shadow-yellow-500/50 group-hover:scale-110 transition-transform">
                              <TrendingUp className="w-5 h-5 text-black" />
                            </div>
                            <div className="h-8 w-0.5 bg-gradient-to-b from-transparent via-yellow-400 to-transparent" />
                          </div>
                        </div>

                        {/* Exchange B - Sell Side */}
                        <div className="relative p-4 bg-gradient-to-br from-slate-800/60 to-slate-700/40 border border-slate-600/30 rounded-2xl overflow-hidden group/exchange">
                          <div className="absolute top-0 right-0 w-20 h-20 bg-emerald-500/10 rounded-full blur-2xl" />
                          <div className="relative">
                            <div className="flex items-center gap-2 mb-3">
                              <div className="w-2 h-2 rounded-full bg-emerald-400 animate-pulse" style={{ animationDelay: '500ms' }} />
                              <p className="text-emerald-400 text-xs font-bold tracking-wider uppercase">{opp.exchange_b}</p>
                            </div>
                            <div className="flex items-baseline gap-2">
                              <p className="text-white text-3xl font-black tabular-nums">${opp.price_b?.toFixed(2)}</p>
                              <span className="text-slate-500 text-sm font-medium">SELL</span>
                            </div>
                          </div>
                        </div>

                        {/* Profit Section */}
                        <div className="pt-4 mt-4 border-t border-slate-700/50">
                          <div className="grid grid-cols-2 gap-4">
                            <div>
                              <p className="text-slate-500 text-xs font-medium tracking-wide mb-2">PROFIT</p>
                              <p className={`${isHighProfit ? 'text-emerald-400' : 'text-yellow-400'} text-2xl font-black tabular-nums`}>
                                ${opp.potential_profit?.toFixed(2)}
                              </p>
                            </div>
                            <div>
                              <p className="text-slate-500 text-xs font-medium tracking-wide mb-2">VOLUME</p>
                              <p className="text-white text-2xl font-black tabular-nums">
                                {opp.volume_available?.toFixed(2)}
                              </p>
                            </div>
                          </div>
                          
                          {/* ROI Badge */}
                          <div className="mt-4 flex items-center gap-2">
                            <div className={`flex-1 h-1.5 rounded-full overflow-hidden bg-slate-800`}>
                              <div 
                                className={`h-full ${isHighProfit ? 'bg-gradient-to-r from-emerald-500 to-yellow-400' : 'bg-gradient-to-r from-yellow-500 to-orange-400'} transition-all duration-500`}
                                style={{ width: `${Math.min(profitMargin * 10, 100)}%` }}
                              />
                            </div>
                            <span className="text-slate-400 text-xs font-bold tabular-nums">{profitMargin.toFixed(1)}% ROI</span>
                          </div>
                        </div>

                        {/* Execute Button */}
                        <button className={`w-full mt-4 py-4 rounded-2xl font-black text-sm tracking-wider uppercase transition-all duration-300 ${isHighProfit ? 'bg-gradient-to-r from-emerald-500 to-yellow-400 text-black hover:shadow-2xl hover:shadow-emerald-500/50' : 'bg-gradient-to-r from-yellow-500 to-orange-400 text-black hover:shadow-2xl hover:shadow-yellow-500/50'} hover:scale-[1.02] active:scale-[0.98]`}>
                          Execute Arbitrage
                        </button>
                      </div>
                    </CardContent>
                  </Card>
                </div>
              );
            })}
          </div>
        )}

        {/* Footer Note */}
        <div className="mt-12 text-center">
          <p className="text-slate-600 text-sm font-light tracking-wide">
            Auto-refreshing every 5 seconds â€¢ Flash loan protection enabled
          </p>
        </div>
      </div>
    </div>
  );
}
